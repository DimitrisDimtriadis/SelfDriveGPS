<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingsActivity"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_wifi_switch_settingsActivity"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold|italic"/>
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tBtn_wifi"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_bluetooth_switch_settingsActivity"
        android:id="@+id/tv_bluetooth"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold|italic"/>
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tBtn_bluetooth"/>
    <Space
        android:layout_width="32dp"
        android:layout_height="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location_mode"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
    <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/iBtn_location_mode"
            android:contentDescription="@string/main_description_for_nav_bar"
            android:src="@drawable/location_mode_icon"
            android:focusable="true"/>
        <Space
            android:layout_width="5dp"
            android:layout_height="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_location_mode"
            android:text="@string/location_unknown_mode"/>
    </LinearLayout>

</LinearLayout>
